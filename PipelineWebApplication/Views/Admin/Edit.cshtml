
@model monitoring.Ngdu



@{
    ViewData["Title"] = "Редактировать";
}

<h1>Редактировать</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="NgduId" />

    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
  

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-success me-md-2" />
        <a asp-action="Index"><input value="Закрыть" class="btn btn-success" /></a>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}